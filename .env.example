# -------------------------------
# APP CONFIGURATION
# -------------------------------
APP_NAME=smart-photo-sharing
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=
API_V1_PREFIX=/api/v1

# App URLs
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# -------------------------------
# DATABASE (PostgreSQL)
# -------------------------------
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartphotos

DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -------------------------------
# REDIS (Caching & Rate Limiting)
# -------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# -------------------------------
# JWT AUTH CONFIG
# -------------------------------
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_SECRET_KEY=change-this-secret
JWT_ALGORITHM=HS256

# -------------------------------
# EMAIL (Verification & Reset)
# -------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM=your-email@gmail.com
EMAIL_TEMPLATES_DIR=./app/email_templates

# -------------------------------
# STORAGE (For images)
# -------------------------------
STORAGE_PROVIDER=local   # local | s3 | gcs
MEDIA_UPLOAD_DIR=./uploaded_media

# For S3:
S3_BUCKET_NAME=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# -------------------------------
# LOGGING
# -------------------------------
LOG_LEVEL=info

# -------------------------------
# OPTIONAL SECURITY
# -------------------------------
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60
